// schema.prisma

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  phone    String
  role     String
  Booking  Booking[]
}

model Product {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  price   Decimal   @db.Decimal(10, 2)
  details Json
  Booking Booking[]
}

model Booking {
  id          Int      @id @default(autoincrement())
  bookingDate DateTime
  product     Product  @relation(fields: [productId], references: [id])
  user        User     @relation(fields: [userId], references: [id])
  productId   Int
  userId      Int
}
